
  <%- include("../partials/head.ejs")%>

  <%- include("../partials/header.ejs")%>
  <body>
    <% if (products.length === 0) { %>
      <div  class="empty-cart">
        <h2 class="tucaritoo">¡Tu carrito está vacío!</h2>
        
       <img  style="
       width: 600px;
   "src="/img/cartEmpty.png" alt="">
    <% } else { %>
      

       <% products.forEach(product =>{%>
        <div class="productcargenertal">

          <div class="cart-item">
            <div class="info">
              <img src="/img/products/<%= product.product.Images[0].name %>" alt="<%= product.product.titulo %>">
              <h2><%= product.product.titulo %></h2>

              <% for(propiedad in product.product.description){ %>
                <p>
                  <%= propiedad  %>: <%= product.product.description[propiedad] %>
                </p>
                <% } %>
                <p class="price">Precio: 
                  <br>$<%= product.product.price%></p>
                <div class="quantity">
                  <label for="quantity">Cantidad:</label>
                  <input type="number" id="quantity" value="<%= product.count %>" min="1">
                </div>
                <button style="
                border: none;
            " onclick="eliminar('<%= product.product.id%>')"><i class="fa-solid fa-trash" style="color: #ff0000;"> </i></button>
              </div>
            </div>
            <%})%>
            <div class="cart-item">
              <div class="electroenvio">
                  <h2>ELECTRO <br> ENVÍO</h2>
                  <input class="envioelectro" type="text" name="envio" placeholder="Codigo postal" required="">
                  <h5>Ingresá tu código postal
                      para calcular el costo de envio</h5>
              </div>

              <div class="oca">

                  <input type="radio" name="correo" value="oca">
                  <img src="/img/oca.png" alt="oca">
              </div>
              <div class="correoarg">
                  <input type="radio" name="correo" value="correoarg">
                  <img src="/img/correoarg.jpg" alt="correoarg">
              </div>
              <div class="andreani">
                  <input type="radio" name="correo" value="andreani">
                  <img src="/img/andreani.png" alt="andreani">
              </div>
            </div>
            <div class="totals">
              <p>Total de Productos: <span id="total-quantity"><%=totalProducts%></span></p>
              <p>Total en Precio: $<span id="total-price"><%=total%></span></p>
            </div>
          
            <div class="totals">
              <p>PAGAR</p>
            </div>
            <% } %>
        

    </body>
<script src="/js/products/eliminarCart.js"></script>
    </html> 
    

  

